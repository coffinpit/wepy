  <view class="login-container">
    <view class="login">
      <view class="app-info">
        <image class="app-logo" src="../image/login-bg.jpg" mode="widthFix"></image>
        <text class="app-name">正善小程序</text>
      </view>
      <view class="alert">
        <view class="alert-title">网页由该小程序开发</view>
