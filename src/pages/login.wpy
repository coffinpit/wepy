<script>
  import wepy from 'wepy'

  export default class Login extends wepy.page {
    config = {
      navigationBarTitleText: '欢迎'
    }
    data = {
    }
    methods = {
      goIndex () {
        wepy.switchTab({
          url: './index'
        })
      },
      login () {
        var _this = this.$parent
        _this.getUserInfo((data) => {
          console.log(data)
          // 修改以下的请求回调
          _this.HttpRequest.UserLogin(data).then((token) => {
            wepy.setStorageSync('token', token)
            this.methods.goIndex()
          })
        })
      }
    }
    onload () {
      this.$apply()
    }
    onShow () {
      const token = wepy.getStorageSync('token')
      token && setTimeout(this.methods.goIndex, 1500)
    }
  }
</script>
