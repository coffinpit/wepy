@import "./../components/orderlist.wxss";
.container {
  min-height: calc(100vh);
  display: block;
}
.package {
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  line-height: 90rpx;
  font-size: 28rpx;
  color: #333;
  height: 94rpx;
  background: #fff;
  margin-bottom: 20rpx;
}
.package view {
  width: 190rpx;
  margin: 0 30rpx;
  box-sizing: border-box;
  text-align: center;
  float: left;
}
.package view.active {
  border-bottom: 2px #fe5946 solid;
  color: #fe5946;
}
.lg-container {
  background: #fff;
  padding-bottom: 20rpx;
}
.lg-container .lgtitle {
  padding: 20rpx;
  border-bottom: 1px #eee solid;
  background: #fff;
  margin-bottom: 20rpx;
}
.lg-container .lgtitle .right {
  text-align: right;
  width: 40%;
}
.lg-container .lgtitle .left {
  width: 60%;
}
.lg-container .lgtitle text {
  display: inline-block;
}
.lgdetail {
  position: relative;
  padding: 0 20rpx;
}
.lgdetail view {
  display: inline-block;
}
.lgdetail .lgcontent {
  width: 100%;
  padding: 20rpx 0;
}
.lgdetail .timeline {
  position: absolute;
  width: 1px;
  top: 0;
  left: 204rpx;
  background: #eee;
  height: 100%;
  z-index: 1;
}
.lgdetail .left {
  width: 162rpx;
  vertical-align: top;
  padding-top: 4rpx;
}
.lgdetail .left text {
  display: block;
}
.lgdetail .middle {
  width: 71rpx;
  position: relative;
  z-index: 99;
  vertical-align: top;
  padding-top: 4rpx;
}
.lgdetail .middle .status {
  width: 40rpx;
  height: 40rpx;
  border: 1px #eee solid;
  text-align: center;
  line-height: 40rpx;
  border-radius: 50%;
  background: #fff;
}
.lgdetail .middle .status.active {
  border: 1px #fc5e43 solid;
  background: #fc5e43;
}
.lgdetail .middle .status.active .iconfont {
  color: #fff;
  font-size: 30rpx;
}
.lgdetail .middle .status .iconfont {
  font-size: 20rpx;
  color: #ccc;
  vertical-align: middle;
}
.lgdetail .right {
  width: 467rpx;
}
