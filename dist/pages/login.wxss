@import "./../components/loading.wxss";
/* -- base color -- */
/* -- base fontSize -- */
/* -- base lineHeight -- */
/* -- Mixin -- */
page {
  background: #ffffff;
}
.login-container {
  height: 100%;
  background: #ffffff;
}
.app-info {
  position: relative;
  text-align: center;
  padding-bottom: 40rpx;
}
.app-info .app-logo {
  display: block;
  width: 100%;
}
.app-info .app-name {
  font-size: 36rpx;
  color: #333333;
}
.app-info .logo {
  width: 200rpx;
  height: 200rpx;
  display: block;
  margin: 0 auto;
}
.alert {
  padding: 0 40rpx;
  text-align: center;
}
.alert .alert-title {
  font-weight: 400;
  font-size: 32rpx;
  color: #333333;
  margin-bottm: 10rpx;
}
.alert-desc {
  display: block;
  list-style: disc inside none;
  margin-top: 20rpx;
}
.alert .alert-text {
  display: list-item;
  text-align: -webkit-match-parent;
  font-size: 28rpx;
  color: #999999;
}
.login-btn {
  background: #ec3d3a;
  border-radius: 0;
  color: #ffffff;
  line-height: 90rpx;
  text-align: center;
  margin-top: 40rpx;
  font-size: 32rpx;
}
.login-btn-active {
  background: #ff2400;
}
.logged {
  margin-top: 200rpx;
}
.logged .logged-icon {
  display: block;
  width: 128rpx;
  height: 128rpx;
  margin: 40rpx auto;
}
.logged .logged-text {
  font-size: 28rpx;
  color: #333333;
  text-align: center;
  margin: 20rpx 0;
}
