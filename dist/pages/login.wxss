@import "./../components/loading.wxss";
/* -- base color -- */
/* -- base fontSize -- */
/* -- base lineHeight -- */
/* -- Mixin -- */
page {
  background: #ffffff;
}
.login-container {
  height: calc(100vh);
  background: #ffffff;
  width: 100%;
  overflow: hidden;
}
.app-info {
  position: relative;
  text-align: center;
  padding-bottom: 40rpx;
}
.app-info .app-logo {
  display: block;
  width: 100%;
}
.logo {
  width: 200rpx;
  height: 200rpx;
  display: block;
  margin: 0 auto;
}
.alert {
  text-align: center;
  position: relative;
  height: 400rpx;
}
.alert .alert-layer {
  position: absolute;
  width: 100%;
  height: 400rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  left: 0;
  top: 0;
  transition: 0.5s left ease-out;
}
.alert .alert-layer.hidden {
  left: -100%;
}
.alert .alert-layer.show {
  left: 0;
}
.alert .alert-layer.unshow {
  left: 100%;
}
.alert .alert-title {
  font-weight: 400;
  font-size: 32rpx;
  color: #333333;
  margin-bottm: 10rpx;
}
.alert-desc {
  display: block;
  list-style: disc inside none;
  margin-top: 20rpx;
}
.alert .alert-text {
  display: list-item;
  text-align: -webkit-match-parent;
  font-size: 28rpx;
  color: #999999;
}
.login-btn {
  background: #ec3d3a;
  border-radius: 0;
  color: #ffffff;
  line-height: 90rpx;
  text-align: center;
  margin-top: 40rpx;
  font-size: 32rpx;
}
.login-btn-active {
  background: #ff2400;
}
.logged {
  margin-top: 200rpx;
}
.logged .logged-icon {
  display: block;
  width: 128rpx;
  height: 128rpx;
  margin: 40rpx auto;
}
.logged .logged-text {
  font-size: 28rpx;
  color: #333333;
  text-align: center;
  margin: 20rpx 0;
}
.app-name {
  font-size: 36rpx;
  color: #333333;
  display: block;
  padding: 20rpx 0;
  text-align: center;
  border-bottom: 1px #eeeeee solid;
}
.login-step {
  width: 160rpx;
  margin: 0 auto;
  position: absolute;
  bottom: 0rpx;
  left: 50%;
  transform: translateX(-50%);
}
.login-step text {
  display: inline-block;
  text-align: center;
  width: 60rpx;
  height: 8rpx;
  margin: 0 10rpx;
  background: #ec3d3a;
}
.login-step text.active {
  background: #ec3d3a;
}
.login-step text.unactive {
  background: #cccccc;
}
