
  <view class="container">
    <view  wx:if="{{!isNull}}">
      <view class="cart-status">
        <text class="title">已购￥{{cartStatus.totalprice}}，成为会员立减 <text class="title link font-bold">￥{{cartStatus.discount}}</text></text>
        <view class="default-button">加入会员</view>
      </view>
      <view class="cart-list">
        <view class="content" wx:if="{{!coldNull}}">
          <text class="title"><text class="iconfont icon-ys_ly"/>冷链配送</text>
          <view catchtap="coldAll" class="cart-checkbox {{coldChecked ? 'checked' : ''}}">
            <text class="iconfont icon-fxkdui"/>
          </view>
        </view>
        <view class="item-box">  
          <view class="items">
              <block wx:for="{{coldlist}}" wx:for-index="index" wx:for-item="item" wx:key="index">  
              <view class="item-list">
                <view class="inner txt"> 
                  <view class="inner-layer" data-index="{{index}}" id="{{item.id}}">
                    <text class="title">{{item.title}}</text>
                    <text class="tips">{{item.detail}}</text>
                    <text class="font-small link">会员价：￥{{item.price}} </text>
                    <text class="font-small">原价：￥{{item.oldprice}}</text>
                  </view>
                  <view class="inner-image">
                    <image src="{{item.path}}" mode="aspectFill" catchtap="goDetail" data-wpygodetail-a="{{item.id}}"/>
                    
  <view class="counter {{ hiddenColdTemp === index ? '' : 'hidden-temp'}}">
    <view catchtap="$counteCold$plusTap" class="counter-btn {{$counteCold$disable ? 'disable' : ''}}" data-com-index="{{index}}">  +  </view>
    <view class="counter-btn temp-input" bindtap="$counteCold$hiddenTap"  wx:if="{{$counteCold$isTemp}}" data-com-index="{{index}}">1</view>
    <input type="number" bindinput="$counteCold$inputTap" bindblur="$counteCold$blurTap" class="counter-btn number" value="{{item.count}}" focus="{{$counteCold$autoFocus}}" data-com-index="{{index}}"/> 
    <view catchtap="$counteCold$minusTap" class="counter-btn minusBtn {{$counteCold$able ? 'able' : ''}}" data-com-index="{{index}}">  -  </view>
  </view>
  
                  </view>
                </view>
                <view data-index="{{index}}" class="inner del">
                  <view class="cart-checkbox {{item.checked ? 'checked' : ''}}" data-value="{{item.id}}" catchtap="coldCheck">
                    <text class="iconfont icon-fxkdui"/>
                  </view>
                </view>  
               </view>
              </block>
          </view>  
        </view>                 
      </view>
      <view class="cart-list">
        <view class="content" wx:if="{{!normalNull}}">
          <text class="title"><text class="iconfont icon-ys_cg"/>常规配送</text>
          <view catchtap="normalAll" class="cart-checkbox {{normalChecked ? 'checked' : ''}}">
            <text class="iconfont icon-fxkdui"/>
          </view>
        </view>
        <view class="item-box">  
          <view class="items">  
              <block wx:for="{{normallist}}" wx:for-index="index" wx:for-item="item" wx:key="index">  
              <view class="item-list">
                <view class="inner txt"> 
                  <view class="inner-layer" data-index="{{index}}" id="{{item.id}}">
                    <text class="title">{{item.title}}</text>
                    <text class="tips">{{item.detail}}</text>
                    <text class="font-small link">会员价：￥{{item.price}} </text>
                    <text class="font-small">原价：￥{{item.oldprice}}</text>
                  </view>
                  <view class="inner-image">
                    <image src="{{item.path}}" mode="aspectFill" catchtap="goDetail" data-wpygodetail-a="{{item.id}}"/>
                    
  <view class="counter {{ hiddenNormalTemp === index ? '' : 'hidden-temp'}}">
    <view catchtap="$counteNormal$plusTap" class="counter-btn {{$counteNormal$disable ? 'disable' : ''}}" data-com-index="{{index}}">  +  </view>
    <view class="counter-btn temp-input" bindtap="$counteNormal$hiddenTap"  wx:if="{{$counteNormal$isTemp}}" data-com-index="{{index}}">1</view>
    <input type="number" bindinput="$counteNormal$inputTap" bindblur="$counteNormal$blurTap" class="counter-btn number" value="{{item.count}}" focus="{{$counteNormal$autoFocus}}" data-com-index="{{index}}"/> 
    <view catchtap="$counteNormal$minusTap" class="counter-btn minusBtn {{$counteNormal$able ? 'able' : ''}}" data-com-index="{{index}}">  -  </view>
  </view>
  
                  </view>
                </view>
                <view data-index="{{index}}" class="inner del">
                  <view class="cart-checkbox {{item.checked ? 'checked' : ''}}" data-value="{{item.id}}" catchtap="normalCheck">
                    <text class="iconfont icon-fxkdui"/>
                  </view>
                </view>   
               </view>
              </block>
          </view>  
        </view>
      </view>
      <view class="cart-bottom" wx:if="{{!isNull}}">
        <view class="title link all" catchtap="checkAll">全选</view>
        <text class="title link edit" bindtap="deleteTap">删除</text>
        <text catchtap="deleteTap" class="del-cart active">去结算</text>
        <text class="cart-info"><text class="tips">(含运费￥{{freight}})</text> 合计: <text class="link">￥{{totalprice}}</text></text>
      </view>
      <view class="vip-tip">
        <text class="iconfont icon-vip link"/>
        <text class="title">尊敬的优价会员，生鲜购满2公斤才可包邮哦</text>
      </view>
    </view>
    <view  wx:else class="blank">
      <image src="../image/null.png" mode="aspectFit"/>
      <text class="title">您的购物车空空如也</text>
      <navigator url="./detail" class="blank-button" hover-class="blank-button-hover">逛一逛</navigator>
    </view>
  </view>