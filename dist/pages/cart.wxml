
  <view class="content">
    <view>购物车</view>
    <view class="item-box">  
      <view class="items">  
          <block wx:for="{{list}}" wx:for-index="index" wx:for-item="item" wx:key="index">  
          <view class="item-list">
            <view catchtouchstart="touchS" catchtouchmove="touchM" catchtouchend="touchE" data-index="{{index}}" style="{{item.txtStyle}}" class="inner txt">  
            {{index}}{{item.txt}}</view>  
            <view data-index="{{index}}" bindtap="delItem" class="inner del">删除</view>  
           </view>
          </block>
      </view>  
    </view>
  </view>