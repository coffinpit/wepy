.container {
  min-height: calc(100vh);
  display: block;
}
.order-status {
  width: 100%;
  white-space: nowrap;
  line-height: 90rpx;
  font-size: 28rpx;
  color: #333;
  height: 90rpx;
  border-bottom: 1px #eee solid;
  background: #fff;
}
.order-status view {
  width: 12%;
  margin: 0 4%;
  box-sizing: border-box;
  text-align: center;
  float: left;
}
.order-status view.active {
  border-bottom: 2px #fe5946 solid;
  color: #fe5946;
}
.cart-list {
  width: 100%;
  box-sizing: border-box;
  margin-top: 20rpx;
}
.cart-list .order-title {
  border-bottom: 1px #eee solid;
}
.cart-list .content {
  margin-bottom: 0;
  height: 100rpx;
  padding: 20rpx;
}
.cart-list .content .order-num {
  color: #999;
}
.cart-list .content .link {
  float: right;
  margin-top: 8rpx;
}
.cart-list .iconfont {
  font-size: 80rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}
.item-box {
  width: 100%;
  background-color: #fff;
}
.items {
  width: 100%;
}
.item-list {
  height: 200rpx;
  overflow: hidden;
  padding: 0 20rpx 20rpx;
  box-sizing: border-box;
}
.inner.txt {
  background-color: #f8f8f8;
  padding: 20rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.inner-left {
  width: 360rpx;
  overflow: hidden;
  white-space: break-all;
}
.inner-left .place {
  min-height: 108rpx;
}
.inner-layer {
  width: 400rpx;
  overflow: hidden;
  float: left;
}
.inner-layer .title {
  min-height: 76rpx;
  height: 76rpx;
  line-height: 38rpx;
  overflow: hidden;
  display: block;
  font-size: 28rpx;
  margin-bottom: 6rpx;
}
.inner-layer .tips,
.inner-layer .title {
  display: block;
}
.inner-layer .tips {
  float: right;
}
.inner-layer .font-small {
  float: left;
  display: block;
  width: 260rpx;
}
.inner-image {
  height: 150rpx;
  float: right;
}
.inner-image image {
  width: 148rpx;
  height: 148rpx;
  border: 1px #eee solid;
  box-sizing: border-box;
  float: left;
  border-right: none;
}
