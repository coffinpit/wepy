
  <view class="container">
    
  <view class="searchbar" bindtap="$searchbar$goSearch">
    <view class="searchinput">
      <image src="../image/search.png"/>
      <text>搜索商品</text>
    </view>
  </view>

    <swiper current="{{swiperOpt.currentTab}}" indicator-dots="{{swiperOpt.indicatorDots}}" indicator-color="{{swiperOpt.indicatorColor}}" indicator-active-color="{{swiperOpt.indicatorActive}}" autoplay="{{swiperOpt.autoplay}}" interval="{{swiperOpt.interval}}" duration="{{swiperOpt.duration}}" catchchange="changeBanner" class="index-swiper">
      <block wx:for="{{bannerLink}}" wx:for-index="index" wx:for-item="item" wx:key="key">
          <swiper-item>
            <image src="{{item.path}}" mode="aspectFill"/>
          </swiper-item>
      </block>
    </swiper>
    <view class="index-promot">
      <image class="index-promot-img" src="../image/syvip_bg.png" mode="aspectFill"/>
      <view class="index-promot-content">
        <view class="index-promot-title">
          优价会员
        </view>
        <view class="index-promot-txt">预计全年可帮您节省￥5690.0</view>
        <view class="index-promot-txt">会员全场包邮(冷运品类需满两公斤包邮)</view>
      </view>
    </view>
    <wxc-flex cross="{{cross}}" class="top_nav-container">
      <block wx:for="{{topnavigation}}" wx:for-index="index" wx:for-item="item" wx:key="key">
        <view class="top_nav {{currentPage == index? 'top_nav_active' : ''}}" bindtap="navTab" data-wpynavtab-a="{{index}}">{{item}}</view>
      </block>
    </wxc-flex>
    <view  wx:if="{{currentPage === 0}}" class="content">
        <view class="goods-title"><image src="../image/sptj_img.png"/></view>
        
  <block wx:for="{{$recGoods$goodsItem}}" wx:for-index="$recGoods$index" wx:for-item="$recGoods$item" wx:key="$recGoods$key">
    <view class="goods" bindtap="$recGoods$tap" id="{{$recGoods$item.id}}" data-wpytap-a="{{$recGoods$item.id}}">
      <view class="goods-image"><image src="{{$recGoods$item.path}}" mode="aspectFit" lazy-load="true"/></view>
      <view class="goods-detail">
        <view class="goods-detail-title">{{$recGoods$item.title}}</view>
        <view class="goods-detail-price">
          会员价:<text class="price">￥{{$recGoods$item.price}} (优惠￥{{$recGoods$item.reduction}})</text>
        </view>
        <view class="goods-detail-oldprice">原价:{{$recGoods$item.oldprice}}</view>
        <view class="goods-promot">
          <view class="goods-promot-image">
            <image src="../image/icon-xian.png"/>
          </view>
          <view class="goods-info">
            特别非常鲜到没朋友
            <view class="goods-end">
              <image src="../image/probq_bg.png" mode="right"/>
            </view>
          </view>
        </view>
      </view>
    </view>
  </block>

    </view>
    <view  wx:elif="{{currentPage === 1}}" class="content">
        <view class="goods-title"><image src="../image/rmsp_img.png"/></view>
        
  <block wx:for="{{$hotGoods$goodsItem}}" wx:for-index="$hotGoods$index" wx:for-item="$hotGoods$item" wx:key="$hotGoods$key">
    <view class="goods" bindtap="$hotGoods$tap" id="{{$hotGoods$item.id}}" data-wpytap-a="{{$hotGoods$item.id}}">
      <view class="goods-image"><image src="{{$hotGoods$item.path}}" mode="aspectFit" lazy-load="true"/></view>
      <view class="goods-detail">
        <view class="goods-detail-title">{{$hotGoods$item.title}}</view>
        <view class="goods-detail-price">
          会员价:<text class="price">￥{{$hotGoods$item.price}} (优惠￥{{$hotGoods$item.reduction}})</text>
        </view>
        <view class="goods-detail-oldprice">原价:{{$hotGoods$item.oldprice}}</view>
        <view class="goods-promot">
          <view class="goods-promot-image">
            <image src="../image/icon-xian.png"/>
          </view>
          <view class="goods-info">
            特别非常鲜到没朋友
            <view class="goods-end">
              <image src="../image/probq_bg.png" mode="right"/>
            </view>
          </view>
        </view>
      </view>
    </view>
  </block>

    </view>
    
  <view wx:if="{{isNull}}">
    
      <view class="lost-goods">
        <image src="../image/lost-goods.png"/>
        <text>暂无数据</text>
      </view>
    
    <view/>
  </view>

    
  <view wx:if="{{isDown}}">
    <view class="isDown">
      <text>—————————— 到底啦 ——————————</text>
    </view>
  </view>

  </view>