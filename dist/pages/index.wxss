@import "./../components/reachdown.wxss";
@import "./../components/defect.wxss";
@import "./../components/searchbar.wxss";
@import "./../components/loading.wxss";
@import "./../components/goods.wxss";
.container {
  margin-top: 80rpx;
}
swiper,
image {
  width: 100%;
}
.index-swiper {
  height: 400rpx;
  border-bottom: 3px #fe5946 solid;
}
.index-swiper image {
  height: 400rpx;
}
.wrap {
  display: block;
  height: 300rpx;
  padding: 10rpx;
  background: #696969;
}
.item {
  min-width: 100rpx;
  min-height: 100rpx;
  font-size: 22rpx;
  text-align: center;
}
.item:nth-of-type(odd) {
  line-height: 30rpx;
  background: #afdde3;
}
.item:nth-of-type(2n) {
  line-height: 50rpx;
  background: #f397b2;
}
.layout-code {
  padding: 15rpx;
  background: #222222;
  color: #FFFFFF;
  font-size: 20rpx;
  font-family: Monaco;
}
.layout-code__point {
  display: inline-block;
  padding: 0 5rpx;
  background: #444444;
}
.top_nav-container {
  width: 100%;
  background: #fff;
}
.top_nav-container .top_nav {
  width: 30%;
  line-height: 90rpx;
  text-align: center;
  margin: 0 10%;
  font-size: 14px;
}
.top_nav-container .top_nav_active {
  border-bottom: 2px #fe5946 solid;
  color: #fe5946;
}
.index-promot {
  position: relative;
  width: 100%;
  height: 250rpx;
}
.index-promot .index-promot-img {
  height: 100%;
}
.index-promot .index-promot-content {
  position: absolute;
  left: 30%;
  top: 50%;
  width: 68%;
  transform: translateY(-50%);
  color: #ffd05a;
}
.index-promot .index-promot-content .index-promot-title {
  font-size: 36rpx;
  border-bottom: 1px #ffd05a solid;
  line-height: 80rpx;
  margin-bottom: 20rpx;
}
.index-promot .index-promot-content .index-promot-txt {
  font-size: 28rpx;
  line-height: 36rpx;
}
.goods-title {
  text-align: center;
  height: 25px;
  margin-top: 40rpx;
}
.goods-title image {
  width: 140px;
  height: 25px;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
