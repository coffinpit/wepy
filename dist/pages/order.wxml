
  <view class="container">
    <view class="order-status">
      <block wx:for="{{package}}" wx:for-index="index" wx:for-item="item" wx:key="key"><view class="{{current === index ? 'active' : ''}}" bindtap="checkPackage" data-wpycheckpackage-a="{{index}}" data-wpycheckpackage-b="{{item.type}}">{{item.title}}</view></block>
    </view>
    <block wx:for="{{orderList}}" wx:for-index="index" wx:for-item="item" wx:key="key">
      <view class="cart-list"  wx:if="{{!item.isNull}}">
        <view class="content order-title">
          <text class="font-normal order-num">订单编号：{{item.title}}</text>
          <text class="font-normal link">{{item.status}}</text>
        </view>
        <view class="item-box">
          <view class="items">
            <block wx:for="{{item.orderDetail}}" wx:for-index="index" wx:for-item="item" wx:key="index">
              <view class="item-list">
                <view class="inner txt">
                  <view class="inner-layer" data-index="{{index}}" id="{{item.sourceId}}">
                    <text class="title">{{item.title}}</text>
                    <text class="font-small link">会员价：￥{{item.price}} </text>
                    <text class="font-small {{userLevel ? 'through' : ''}}">原价：￥{{item.oldprice}}</text>
                    <text class="tips">{{item.detail}}</text>
                  </view>
                  <view class="inner-image">
                    <image src="{{item.path}}" mode="aspectFill"/>
                  </view>
                </view>
              </view>
            </block>
          </view>
        </view>
      </view>
    </block>
  </view>