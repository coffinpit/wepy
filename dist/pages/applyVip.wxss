.main {
  overflow: hidden;
}
image {
  width: 100%;
  float: left;
}
.default-button {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  line-height: 100rpx;
}
.popup {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}
.popup.active {
  bottom: 0;
}
.popup-content {
  width: 600rpx;
  height: 800rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  opacity: 0;
  z-index: -1;
  background: #fff;
  transition: 0.5s all ease-in;
  z-index: 999;
}
.popup-content.show {
  opacity: 1;
}
.popup-content .popup-title {
  padding: 20rpx;
  border-bottom: 1px #eee solid;
}
.popup-content .popup-detail {
  padding: 20rpx;
}
.popup-content .popup-detail .popup-type {
  border: 1px #eee solid;
  padding: 20rpx;
}
.popup-content .popup-detail .popup-type .font-normal {
  width: 50%;
  display: inline-block;
}
.popup-content .popup-detail .popup-type .link {
  text-align: right;
}
.popup-content .popup-detail .popup-type.light {
  border: 1px #fca743 solid;
  box-shadow: 0 0 10rpx #ffc98a;
}
.popup-content .popup-detail .radio-group .link {
  text-decoration: underline;
}
