
  <view class="main" style="height: {{isShow ? winHeight : 'auto'}}">
    <image src="http://p33mnuvro.bkt.clouddn.com/image/webimg/vip_01.jpg" mode="widthFix"/>
    <image src="http://p33mnuvro.bkt.clouddn.com/image/webimg/vip_02.jpg" mode="widthFix"/>
    <image src="http://p33mnuvro.bkt.clouddn.com/image/webimg/vip_03.jpg" mode="widthFix"/>
    <image src="http://p33mnuvro.bkt.clouddn.com/image/webimg/vip_04.jpg" mode="widthFix"/>
    <image src="http://p33mnuvro.bkt.clouddn.com/image/webimg/vip_06.jpg" mode="widthFix"/>
    <button class="default-button" bindtap="buyVip">购买会员</button>
    <view class="popup"  wx:if="{{isShow}}"/>
    <view class="popup-content {{isShow ? 'show' : ''}}">
      <view class="popup-title"><text class="font-normal">请选择支付类型</text></view>
      <block wx:for="{{typeList}}" wx:for-index="index" wx:for-item="item" wx:key="key">
        <view class="popup-detail" bindtap="chooseType">
          <view class="popup-type {{current === index ? 'light' : ''}}"><text class="font-normal">{{item.title}}</text><text class="font-normal link">￥{{item.price}}</text></view>
        </view>
      </block>
      <view class="popup-detail">
        <radio-group class="radio-group" bindchange="radioChange">
          <radio value="isRead" checked color="#fc5e43"/> <text class="font-normal">我已阅读<text class="link">会员服务协议</text></text>
        </radio-group>
      </view>
    </view>
  </view>