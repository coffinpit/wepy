/* -- Mixin -- */
.lost-goods {
  padding: 50rpx 0;
  margin: 0 auto;
  width: 330rpx;
  height: 200rpx;
  position: relative;
  text-align: center;
}
.lost-goods image {
  width: 330rpx;
  height: 170rpx;
}
.lost-goods .blank-button {
  width: 40%;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translate(-50%, 0);
  line-height: 50rpx;
  text-align: center;
}
.lost-goods text.iconfont {
  position: absolute;
  top: 80rpx;
  left: 50%;
  transform: translate(-50%, 0);
  background: rgba(204, 204, 204, 0.8);
  border-radius: 50%;
  width: 140rpx;
  height: 140rpx;
  text-align: center;
  font-size: 120rpx;
  color: #ffffff;
  line-height: 140rpx;
}
.lost-goods text.iconfont.icon-ksj_sc,
.lost-goods text.iconfont.icon-me_xx,
.lost-goods text.iconfont.icon-dz_sc {
  font-size: 100rpx;
}
.lost-goods text.font-normal {
  color: #999999;
}
