/* -- Mixin -- */
.container {
  margin-top: 80rpx;
}
swiper,
image {
  width: 100%;
}
.index-swiper {
  height: 347rpx;
  border-bottom: 3px #fc5e43 solid;
}
.index-swiper image {
  height: 347rpx;
}
.top_nav-container {
  width: 100%;
  background: #ffffff;
}
.top_nav-container .top_nav {
  width: 30%;
  line-height: 90rpx;
  text-align: center;
  margin: 0 10%;
  font-size: 28rpx;
}
.top_nav-container .top_nav_active {
  border-bottom: 2px #fc5e43 solid;
  color: #fc5e43;
}
.index-promot {
  position: relative;
  width: 100%;
  height: 250rpx;
}
.index-promot .index-promot-img {
  height: 100%;
}
.index-promot .index-promot-content {
  position: absolute;
  left: 28%;
  top: 50%;
  width: 68%;
  transform: translateY(-50%);
  color: #ffbe89;
}
.index-promot .index-promot-content .index-promot-title {
  font-size: 36rpx;
  border-bottom: 1px #ffbe89 solid;
  line-height: 80rpx;
  margin-bottom: 20rpx;
}
.index-promot .index-promot-content .index-promot-txt {
  font-size: 28rpx;
  line-height: 36rpx;
}
.goods-title {
  text-align: center;
  height: 25px;
  margin-top: 40rpx;
}
.goods-title image {
  width: 140px;
  height: 25px;
}
