/* -- Mixin -- */
.menu-layer {
  position: fixed;
  right: -82rpx;
  bottom: 200rpx;
  text-align: center;
  line-height: 70rpx;
  transition: 0.5s right ease-in;
  z-index: 9999999;
}
.menu-layer .menu-button {
  width: 30rpx;
  padding: 10rpx;
  display: inline-block;
  background: #fc5e43;
  border-radius: 20rpx 0  0 20rpx;
  line-height: 28rpx;
  vertical-align: bottom;
  box-shadow: 8rpx 4rpx 8rpx #ccc;
}
.menu-layer .menu-button text {
  color: #ffffff;
}
.menu-layer .menu-content {
  display: inline-block;
  background: #ffffff;
  border: 1px #cccccc solid;
  border-right: 0;
  box-shadow: 8rpx 4rpx 8rpx #ccc;
}
.menu-layer .menu-content view {
  width: 80rpx;
  height: 80rpx;
}
.menu-layer image {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.menu-layer.active {
  right: 0;
}
.menu-layer.active .iconfont {
  transform: rotateZ(90deg);
}
.menu-layer .iconfont {
  color: #666666;
  font-size: 50rpx;
  transform: rotateZ(-90deg);
  display: inline-block;
  vertical-align: middle;
  margin-top: 6rpx;
}
