/* -- Mixin -- */
page {
  margin-top: 80rpx;
}
.container {
  min-height: calc(100vh);
  width: 100%;
  overflow: hidden;
  display: block;
}
.content {
  padding: 0 20rpx;
}
.goods {
  margin: 20rpx 0;
}
.category-bg {
  width: 750rpx;
  height: 280rpx;
  overflow: hidden;
}
.category-bg image {
  position: absolute;
  top: 80rpx;
  left: 0;
  width: 750rpx;
  height: 278rpx;
  opacity: 0;
  transition: 1s opacity ease-in, 2s transform ease-in 1s;
}
.category-bg image.active {
  opacity: 1;
}
.category-tab {
  width: 100%;
  display: flex;
  position: absolute;
  top: 260rpx;
  z-index: 999;
}
.category-tab .category-tab-list {
  width: 21%;
  padding: 0 2%;
  text-align: center;
  font-size: 32rpx;
  color: #ffffff;
  background: rgba(0, 0, 0, 0.5);
}
.category-tab .category-tab-list.active {
  background: rgba(252, 94, 67, 0.8);
}
.category-tab .category-tab-list .category-tab-title {
  min-height: 100rpx;
  line-height: 100rpx;
}
.category-tab-item {
  width: 100%;
  background: #ffffff;
  position: absolute;
  top: 358rpx;
  left: 0;
  z-index: 999;
  overflow: hidden;
}
.category-tab-item .category-tab-page {
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  height: 80rpx;
  white-space: nowrap;
  overflow: hidden;
}
.category-tab-item .category-tab-page.more {
  background: url(data:image/png;base64,) no-repeat 700rpx center;
  background-size: 4%;
}
.category-tab-item .category-tab-page .catrgory-tab-link {
  font-size: 28rpx;
  margin: 0 2%;
  line-height: 80rpx;
  text-align: center;
  display: inline-block;
  width: 16%;
  box-sizing: border-box;
}
.category-tab-item .category-tab-page .catrgory-tab-link text {
  line-height: 46rpx;
}
.category-tab-item .category-tab-page .catrgory-tab-link.current text {
  display: inline-block;
  border-bottom: 5rpx #fc5e43 solid;
}
.goods-title {
  text-align: center;
  height: 25px;
  margin-top: 40rpx;
}
.goods-title image {
  width: 140px;
  height: 25px;
}
.content {
  margin-top: 100rpx;
}
.defect {
  margin-top: 140rpx;
}
