.bottombar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 116rpx;
  background: #111111;
  display: flex;
  font-size: 28rpx;
  color: #fff;
}
.bottombar .contact {
  width: 20%;
  border-right: 1px #999 solid;
}
.bottombar .contact button {
  font-size: 28rpx;
  color: #fff;
  background: none;
  line-height: 48rpx;
  padding-top: 20rpx;
}
.bottombar .contact text {
  display: block;
  color: #fff;
}
.bottombar .contact .iconfont {
  color: #fff;
  font-size: 72rpx;
}
.bottombar .cart,
.bottombar .buy {
  width: 40%;
  text-align: center;
  line-height: 116rpx;
  font-size: 36rpx;
}
.bottombar .buy {
  background: #fc5e43;
}
