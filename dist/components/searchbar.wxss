/* -- Mixin -- */
.searchbar {
  width: 100%;
  height: 80rpx;
  background: #ec3d3a;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99999;
}
.searchbar .searchinput {
  border-radius: 30rpx;
  background: #ffffff;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  color: #999999;
  height: 40rpx;
}
.searchbar .searchinput image {
  vertical-align: middle;
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
}
.searchbar .searchinput text {
  vertical-align: middle;
}
