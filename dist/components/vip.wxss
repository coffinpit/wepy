.popup {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}
.popup.active {
  bottom: 0;
}
.popup-content {
  width: 600rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  opacity: 0;
  background: #fff;
  transition: 0.5s all ease-in;
  z-index: -1;
}
.popup-content.show {
  opacity: 1;
  z-index: 999;
}
.popup-content .popup-title {
  padding: 20rpx;
  border-bottom: 1px #eee solid;
}
.popup-content .popup-detail {
  padding: 20rpx 20rpx 0;
}
.popup-content .popup-detail .popup-type {
  border: 1px #eee solid;
  padding: 20rpx;
}
.popup-content .popup-detail .popup-type .font-normal {
  width: 50%;
  display: inline-block;
}
.popup-content .popup-detail .popup-type .link {
  text-align: right;
}
.popup-content .popup-detail .popup-type.light {
  border: 1px #fca743 solid;
  box-shadow: 0 0 10rpx #ffc98a;
}
.popup-content .popup-detail .checkbox {
  text-align: center;
  margin: 10rpx 0 30rpx;
}
.popup-content .popup-detail .checkbox .rules {
  display: inline-block;
  margin-left: 10rpx;
}
.popup-content .popup-detail .checkbox .link {
  text-decoration: underline;
}
.popup-content .button-layer {
  padding: 20rpx 0 26rpx;
  border-top: 1px #eee solid;
}
.popup-content .button-layer .cancel {
  color: #999;
  border-right: 1px #eee solid;
}
.popup-content .button-layer .font-normal {
  display: inline-block;
  box-sizing: border-box;
  width: 50%;
  text-align: center;
}
