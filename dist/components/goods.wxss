.goods {
  display: flex;
  align-items: stretch;
  width: 100%;
  padding: 15px 0;
  height: 100px;
  border-bottom: 1px #eee solid;
}
.goods:last-child {
  border-bottom: none;
}
.goods .goods-image {
  width: 100px;
  border: 1px #eee solid;
  height: 100px;
  overflow: hidden;
}
.goods .goods-detail {
  width: 65%;
  padding-left: 5%;
  color: #333;
}
.goods .goods-detail .goods-detail-title {
  font-size: 16px;
  line-height: 20px;
  min-height: 40px;
  height: 40px;
  overflow: hidden;
}
.goods .goods-detail .goods-detail-price {
  font-size: 14px;
}
.goods .goods-detail .goods-detail-price .price {
  color: #fc5e42;
  font-weight: 500;
}
.goods .goods-detail .goods-detail-oldprice {
  font-size: 12px;
  color: #999;
}
